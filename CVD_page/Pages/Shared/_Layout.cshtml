<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CVD_page</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap_Lumen.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CVD_page.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
<body style="background-color:cornsilk">
<div class="container-primary ">
    <div class="mb-5">
        <header class="mb-2 fixed-top">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow  mb-0">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">CVD_page</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between text-white">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Products/Index" asp-route-IsReadOnly="true">Product list</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    </div>
   
    <div>
        <div style="height: 1%"></div>
        <div class="float-container mt-7 " style="background-color: ivory; height:100% ">
                <div class="float-child float-sm-end mb-3 mt-6 sidebar" style="width: 20%; background-color: seashell; border: ridge">
                <nav>
                    <ul class="text-black">
                        <li class="text-black"><a asp-page="/Index">Home</a></li>
                        <li class="text-blue">
                            About Us
                            <ul class="text-white">
                                <li><a asp-page="/CVD/AboutUs/Mission">CVD Mission</a></li>
                                <li class="text-black"><a asp-page="/CVD/AboutUs/WhyChooseUs">Why Choose Us</a></li>
                            </ul>
                        </li>
                        <li>
                            What We Do
                            <ul>
                                <li class="text-black"><a asp-page="/CVD/WhatWeDo/Expertise">Our Expertise</a></li>
                                <l class="text-black"><a asp-page="/CVD/WhatWeDo/Deliver">How We Deliver</a></l>
                            </ul>
                        </li>
                        <li>
                            Who We Work With
                            <ul>
                                <li class="text-black"><a asp-page="/CVD/WhoWeServe/Partners">Partners</a></li>
                                <li class="text-black"><a asp-page="/CVD/WhoWeServe/WhomWeServe">Whom We Serve</a></li>
                            </ul>
                        </li>
                       
                        <li>
                            Our Products
                            <ul>
                                <li class="text-black"><a asp-page="/Products/Index">Products</a></li>

                            </ul>
                        </li>
                        <li>
                            How to Reach Us
                            <ul>
                                <li class="text-black"><a asp-page="/CVD/Contacts/ContactInfo">Contact Info</a></li>
                                <li class="text-black"><a asp-page="/Products/Enquiries">Speak to us</a></li>

                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="float-child float-sm-end mb-3" style="width: 80%; background-color: #40E0D0; border: ridge">
                <main role="main" class="pb-3">
                    <partial name="Shared/_Notifications"/>
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <div class="">
        <footer class="border-top footer text-muted bg-secondary mt-5 text-white fixed-bottom position-fixed">
            <div class="container  text-center">

                &copy; 2025 - CVD_page - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js" integrity="sha384-k6d4wzSIapyDyv1kpU366/PK5hCdSbCRGRCMv+eplOQJWyd1fbcAu9OCUj5zNLiq" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</div>
</body>

</html>